@using MarketCRUDProduct.Models
@model (Category category, List<Product> products)

<div class="container mt-5">

    <!-- CATEGORY DETAILS -->
    <div class="card shadow mb-4">
        <div class="card-header bg-dark text-white">
            Category Details
        </div>

        <div class="card-body">
            <p><b>ID:</b> @Model.category.CategoryId</p>
            <p><b>Name:</b> @Model.category.CategoryName</p>
            <p><b>Description:</b> @Model.category.CategoryDescription</p>
        </div>
    </div>

    <!-- PRODUCTS UNDER CATEGORY -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            Products in this Category
        </div>

        <div class="card-body p-0">
            @if (Model.products != null && Model.products.Count > 0)
            {
                <table class="table table-hover mb-0 text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Qty</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var product in Model.products)
                        {
                            <tr>
                                <td>@product.productId</td>
                                <td>@product.productName</td>
                                <td>₹ @product.prodcutPrice</td>
                                <td>@product.productQuantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-3 text-center text-muted">
                    No products found in this category
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            Back
        </a>
    </div>

</div>
