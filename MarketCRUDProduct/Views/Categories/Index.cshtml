@model List<Category>

<div class="container mt-5">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Categories</h2>
            <small class="text-muted">Manage your product categories</small>
        </div>

        <a asp-controller="Categories"
           asp-action="AddCategory"
           class="btn btn-success">
            + Add Category
        </a>
    </div>

    <!-- TABLE -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white">
                Category List
            </div>

            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0 text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th style="width:230px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryId</td>
                                <td class="fw-semibold">@category.CategoryName</td>
                                <td class="text-muted">@category.CategoryDescription</td>
                                <td>
                                    <a asp-action="Detail"
                                       asp-route-id="@category.CategoryId"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        Detail
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@category.CategoryId"
                                       class="btn btn-sm btn-outline-warning me-1">
                                        Edit
                                    </a>

                                    <button class="btn btn-sm btn-outline-danger"
                                            onclick="openDeleteModal(@category.CategoryId)">
                                        Delete
                                    </button>

                                    <!-- Hidden Delete Form -->
                                    <form id="delete-form-@category.CategoryId"
                                          asp-action="Delete"
                                          asp-route-id="@category.CategoryId"
                                          method="post"
                                          class="d-none">
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <h5>No Categories Found</h5>
        </div>
    }
</div>

<!-- ================= DELETE CONFIRM MODAL ================= -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                Are you sure you want to delete this category?
            </div>

            <div class="modal-footer justify-content-center">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <button type="button"
                        class="btn btn-danger"
                        onclick="submitDelete()">
                    Yes, Delete
                </button>
            </div>

        </div>
    </div>
</div>

<!-- ================= SUCCESS / ERROR MODAL ================= -->
<div class="modal fade" id="messageModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div id="messageHeader" class="modal-header">
                <h5 class="modal-title" id="messageTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center" id="messageBody"></div>

            <div class="modal-footer justify-content-center">
                <button type="button"
                        class="btn btn-primary"
                        data-bs-dismiss="modal">
                    OK
                </button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = 0;

        // DELETE CONFIRM MODAL
        function openDeleteModal(id) {
            deleteId = id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function submitDelete() {
            document.getElementById('delete-form-' + deleteId).submit();
        }

        // SUCCESS / ERROR MESSAGE
        function showMessage(title, message, type) {
            document.getElementById('messageTitle').innerText = title;
            document.getElementById('messageBody').innerText = message;

            const header = document.getElementById('messageHeader');
            header.className = `modal-header bg-${type} text-white`;

            const modal = new bootstrap.Modal(document.getElementById('messageModal'));
            modal.show();

            setTimeout(() => modal.hide(), 2000);
        }

        document.addEventListener("DOMContentLoaded", function () {

            @if (TempData["Success"] != null)
            {
                    <text>
                        showMessage("Success", "@TempData["Success"]", "success");
                    </text>
            }

            @if (TempData["Error"] != null)
            {
                    <text>
                        showMessage("Error", "@TempData["Error"]", "danger");
                    </text>
            }

        });
    </script>
}
